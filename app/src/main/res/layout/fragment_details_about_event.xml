<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >
    <data>
        <variable
            name="viewModel"
            type="com.creativeshare.sunfun.viewmodel.add_event_view_model.ViewModelEventDetails" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/gray0"
        android:clickable="true"
        android:focusable="true"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/first_details_about_the_place"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/event_name"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"

                />
            <EditText
                android:id="@+id/edtTitleAr"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/edt_bg"
                android:hint="@string/event_name"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray4"
                android:singleLine="true"
                android:text="@={viewModel.name_ar}"
                error="@{viewModel.name_ar_error}"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/event_title_en"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"

                />
            <EditText
                android:id="@+id/edtTitleEn"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/edt_bg"
                android:hint="@string/event_title_en"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray4"
                android:singleLine="true"
                android:text="@={viewModel.name_en}"
                error="@{viewModel.name_en_error}"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/description_ar"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"

                />
            <EditText
                android:id="@+id/edtDescriptionAr"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/edt_bg"
                android:hint="@string/description_ar"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray4"
                android:singleLine="true"
                android:gravity="top|start"
                android:padding="8dp"
                android:text="@={viewModel.desc_ar}"
                error="@{viewModel.desc_ar_error}"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/description_en"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"

                />
            <EditText
                android:id="@+id/edtDescriptionEn"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/edt_bg"
                android:hint="@string/description_en"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray4"
                android:singleLine="true"
                android:gravity="top|start"
                android:padding="8dp"
                android:text="@={viewModel.desc_en}"
                error="@{viewModel.desc_en_error}"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/information_ar"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"

                />
            <EditText
                android:id="@+id/edtInfoAr"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/edt_bg"
                android:hint="@string/information_ar"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray4"
                android:singleLine="true"
                android:gravity="top|start"
                android:padding="8dp"
                android:text="@={viewModel.info_ar}"
                error="@{viewModel.info_ar_error}"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/information_en"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"

                />
            <EditText
                android:id="@+id/edtInfoEn"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/edt_bg"
                android:hint="@string/information_en"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray4"
                android:singleLine="true"
                android:gravity="top|start"
                android:padding="8dp"
                android:text="@={viewModel.info_en}"
                error="@{viewModel.info_en_error}"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/event_type"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"

                />
            <FrameLayout

                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/edt_bg"
                android:layout_marginTop="8dp"

                >

                <Spinner
                    android:id="@+id/spinnerCategory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    >

                </Spinner>
            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/category"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"

                />
            <FrameLayout

                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/edt_bg"
                android:layout_marginTop="8dp"

                >

                <Spinner
                    android:id="@+id/spinnerSubCategory"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    >

                </Spinner>
            </FrameLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ticket_number_available"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edt_bg"
                android:hint="@string/ticket_number_available"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="8dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray4"
                android:singleLine="true"
                android:inputType="number"
                android:text="@={viewModel.ticket_num}"
                error="@{viewModel.ticket_num_error}"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/price"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edt_bg"
                android:hint="@string/price"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="8dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray4"
                android:singleLine="true"
                android:inputType="numberDecimal"
                android:text="@={viewModel.price}"
                error="@{viewModel.price_error}"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="@string/event_image"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"

                >
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:background="@drawable/edt_bg"
                    >
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/image1"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        app:riv_border_width="0dp"
                        android:clickable="false"
                        android:longClickable="false"
                        app:riv_border_color="@color/gray4"
                        />
                    <ImageView
                        android:id="@+id/icon1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_upload"
                        android:padding="5dp"
                        android:clickable="false"
                        android:longClickable="false"
                        />
                </FrameLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".2"/>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:background="@drawable/edt_bg"
                    >
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/image2"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        app:riv_border_width="0dp"
                        android:clickable="false"
                        android:longClickable="false"
                        app:riv_border_color="@color/gray4"

                        />
                    <ImageView
                        android:id="@+id/icon2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_upload"
                        android:padding="5dp"
                        android:clickable="false"
                        android:longClickable="false"
                        />
                </FrameLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>
